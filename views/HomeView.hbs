<header>

    <a href="/">
        <div id="logo">
            <h1>Pet<span class="text-info">Base</span></h1>
        </div>
    </a>

    <div id="topSearchContainer">
        <input id="topSearchBar" type="text" placeholder="Search...">
    </div>

    <div id="logoutBtnContainer">
        <button type="submit" class="btn btn-info" id="logoutBtn" onclick="window.location = '/logout'">Log Out</button>
    </div>

</header>

<div id="content">

    {{!-- Left side: User Profile --}}
    <div id="left" class="col-sm-4">

        <div id="profile">

            <div id="userInfo">

                <div id="dpContainer">
                    <img id="dp" src="{{user.image_url}}" alt="Display Picture"/>
                </div>
                
                <div id="nameBioContainer">
                    <h3 id="userName"><a href="/profile/{{user.id}}" >{{user.first_name}} {{user.last_name}}</a></h3>
                    <p id="bio"><i>{{user.desc}}</i></p>
                </div>

            </div>

            <div id="userStatsContainer">
                <table id="userStats" cellspacing="10"> 
                    <tr>
                        <td><a href="/">Posts</a></td>
                        <td>{{user.numPosts}}</td>
                    </tr>

                    <tr>
                        <td><a href="/messages">Messages</a></td>
                        <td>{{user.numMessages}}</td>
                    </tr>

                    <tr>
                        <td>Likes</td>
                        <td>{{user.numLikes}}</td>
                    </tr>
                </table>
            </div>

            <div id="editProfileBtnContainer">
                <button type="button" class="btn btn-info" onclick="window.location = '/edit-profile'" id="editProfileBtn">Edit Profile</button>
            </div>

        </div>

    </div>

    {{!-- Right side: Submission, Topic Search, Latest Discussions --}}
    <div id="right" class="col-sm-8">

        <div id="posts">

            {{!-- Post Submission --}}
            <div id="submissionContainer">
                <form method="post" action="/add-post" id="submission">

                    <h4>Have a question? Ask!</h4>

                    <label for="subject">Subject</label>
                    <input type="text" name="subject" placeholder="Ex: Why does my dog hump me so much?" required/>

                    <label for="details">Details</label>
                    <textarea rows="8" name="details" placeholder="..." required></textarea>

                    <label for="petType">Pet Type</label>
                    <select id="petType">
                        <option value="dog">Dog</option>
                        <option value="car">Cat</option>
                        <option value="bird">Bird</option>
                        <option value="fish">Fish</option>
                        <option value="reptile">Reptile</option>
                    </select>

                    <button type="submit" class="btn btn-info" id="submitPostBtn">Post to Timeline</button>

                </form>
            </div>

            {{!-- Topic Search --}}
            <div id="topicSearchContainer">
                <form id="topicSearch" action="/">

                    <h4>Search Posts by Pet Type</h4>

                    <label for="petType">Pet Type</label>
                    <select id="petTypeSearch">
                        <option value="dog">Dog</option>
                        <option value="car">Cat</option>
                        <option value="bird">Bird</option>
                        <option value="fish">Fish</option>
                        <option value="reptile">Reptile</option>
                    </select>

                    <button type="submit" class="btn btn-info" id="topicSearchBtn">Search</button>

                </form>
            </div>

            {{!-- Latest Discussions --}}
            <div id="latestDiscussionsContainer">

                <h4>Latest Discussions</h4>

                <div id="postsContainer">
                    {{#each posts}}
                    <div class="postCard">

                        <div class="postDpContainer">
                            <img class="postDp" src="{{image_url}}" alt="Post User Display Picture"/>
                        </div>
                        <a href="/profile/{{user_id}}">{{first_name}} {{last_name}}</a>

                        <div class="postInfoContainer">

                            <div class="subjectTopicContainer">

                                <div class="subjectContainer">
                                    <h4 class="postSubject">{{subject}}</h4>
                                </div>
                            </div>

                            <div class="postPreviewContainer">
                                <p class="postPreview">{{body}}</p>
                            </div>

                            <div class="dateRepliesContainer">
                                <p class="postDate">{{post_date}}</p>

                                <a href="/" class="postReplies">Replies {{reply_count}}</a>
                            </div>

                        </div>

                    </div>
                    {{/each}}

                </div>


            </div>

        </div>

    </div>

</div>